<script type="text/javascript">
function extras(){
	extrasDiv = document.getElementById("extras");
	mybutton = document.getElementById("showThem");
	if (extrasDiv.style.visibility == "hidden"){
		extrasDiv.style.visibility = "visible";
		mybutton.value= "Hide available options";
	}
	else if(extrasDiv.style.visibility == "visible"){
		extrasDiv.style.visibility = "hidden";
		mybutton.value= "More available actions";
	}
}
</script>
